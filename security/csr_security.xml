<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="group_csr_user" model="res.groups">
            <field name="name">CSR Upcycling User</field>
        </record>

        <record id="group_csr_manager" model="res.groups">
            <field name="name">CSR Upcycling Manager</field>
            <field name="implied_ids" eval="[(4, ref('csr_upcycling.group_csr_user'))]"/>
        </record>

        <record id="base.group_user" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('csr_upcycling.group_csr_user'))]"/>
        </record>

        <record id="base.user_admin" model="res.users">
            <field name="groups_id" eval="[(4, ref('csr_upcycling.group_csr_manager'))]"/>
        </record>

        <record id="csr_request_user_rule" model="ir.rule">
            <field name="name">CSR Requests - User Access</field>
            <field name="model_id" ref="model_csr_upcycle_request"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('csr_upcycling.group_csr_user'))]"/>
        </record>

        <record id="csr_request_manager_rule" model="ir.rule">
            <field name="name">CSR Requests - Manager</field>
            <field name="model_id" ref="model_csr_upcycle_request"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('csr_upcycling.group_csr_manager'))]"/>
        </record>
    </data>
</odoo>
