<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_department_form_csr_upcycling" model="ir.ui.view">
            <field name="name">hr.department.csr.upcycling.form</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet//div[hasclass('oe_button_box')]" position="inside">
                    <button name="action_view_upcycle_requests" type="object" class="oe_stat_button" icon="fa-recycle">
                        <field name="upcycle_request_count" widget="statinfo" string="Upcycle Requests"/>
                    </button>
                </xpath>
                <xpath expr="//sheet" position="inside">
                    <group string="CSR KPIs">
                        <field name="upcycle_total_co2e"/>
                        <field name="upcycle_total_aed"/>
                        <field name="upcycle_total_ceits"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
