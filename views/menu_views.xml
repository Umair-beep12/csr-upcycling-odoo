<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_csr_upcycling_items" model="ir.actions.act_window">
            <field name="name">CSR Upcycle Requests</field>
            <field name="res_model">csr.upcycle.request</field>
            <field name="view_mode">list,kanban,form,pivot,graph</field>
            <field name="view_id" ref="view_csr_upcycle_request_list"/>
        </record>

        <record id="action_csr_upcycle_reporting" model="ir.actions.act_window">
            <field name="name">CSR Impact Reporting</field>
            <field name="res_model">csr.upcycle.request</field>
            <field name="view_mode">pivot,graph</field>
            <field name="view_id" ref="view_csr_upcycle_request_pivot"/>
        </record>

        <record id="action_csr_upcyclable_products" model="ir.actions.act_window">
            <field name="name">Upcyclable Products</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('upcyclable', '=', True)]</field>
        </record>

        <menuitem id="menu_csr_upcycling_root" name="CSR Upcycling" action="action_csr_upcycling_items" sequence="30"/>

        <menuitem id="menu_csr_operations_root" name="Operations" parent="menu_csr_upcycling_root" sequence="10"/>
        <menuitem id="menu_csr_upcycle_requests" name="Upcycle Requests" parent="menu_csr_operations_root" action="action_csr_upcycling_items" sequence="10"/>
        <menuitem id="menu_csr_upcyclable_products" name="Upcyclable Products" parent="menu_csr_operations_root" action="action_csr_upcyclable_products" sequence="20"/>

        <menuitem id="menu_csr_analytics_root" name="Analytics" parent="menu_csr_upcycling_root" sequence="20"/>
        <menuitem id="menu_csr_dashboard" name="Dashboard" parent="menu_csr_analytics_root" action="action_csr_dashboard" sequence="10"/>
        <menuitem id="menu_csr_upcycle_reporting" name="Impact Reporting" parent="menu_csr_analytics_root" action="action_csr_upcycle_reporting" sequence="20"/>
        <menuitem id="menu_csr_department_impact" name="Department Impact" parent="menu_csr_analytics_root" action="action_csr_department_impact" sequence="30"/>
    </data>
</odoo>
